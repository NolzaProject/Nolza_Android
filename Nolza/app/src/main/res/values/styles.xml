<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Nolza.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>



    <!-- Text Style. -->

    <style name="Text_Medium" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="Text_Large" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="Text_Max" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textSize">@dimen/textsize_max</item>
    </style>

    <style name="Text_Medium_Bold" parent="Text_Medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text_Large_Bold" parent="Text_Large">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
